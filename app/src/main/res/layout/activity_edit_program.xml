<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditProgramActivity">

    <include
        android:id="@+id/create_program_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintBottom_toTopOf="@+id/create_program_table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:id="@+id/create_program_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/create_program_button_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_program_toolbar">

        <TableRow android:layout_margin="10dp">

            <TextView
                android:id="@+id/create_program_name_label"
                android:layout_width="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:labelFor="@+id/create_program_name_edit"
                android:text="@string/create_program_label_name"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <EditText
                android:id="@+id/create_program_name_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints="@null"
                android:gravity="end"
                android:inputType="textCapCharacters"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow android:layout_margin="10dp">

            <TextView
                android:id="@+id/create_program_source_label"
                android:layout_width="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:labelFor="@+id/create_program_source_edit"
                android:text="@string/create_program_label_source"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <EditText
                android:id="@+id/create_program_source_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints="@null"
                android:gravity="end"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow android:layout_margin="10dp">

            <TextView
                android:id="@+id/create_program_links_label"
                android:layout_width="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:labelFor="@+id/create_program_links_edit"
                android:text="@string/create_program_label_links"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <EditText
                android:id="@+id/create_program_links_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints="@null"
                android:gravity="end"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow android:layout_margin="10dp">

            <TextView
                android:id="@+id/create_program_info_label"
                android:layout_width="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:labelFor="@+id/create_program_info_edit"
                android:text="@string/create_program_label_info"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <EditText
                android:id="@+id/create_program_info_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints="@null"
                android:gravity="end"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow android:layout_margin="10dp">

            <TextView
                android:id="@+id/create_program_notes_label"
                android:layout_width="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:labelFor="@+id/create_program_notes_edit"
                android:text="@string/create_program_label_notes"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <EditText
                android:id="@+id/create_program_notes_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints="@null"
                android:gravity="end"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow android:layout_margin="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/create_program_number_workouts_label"
                android:layout_width="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:labelFor="@+id/create_program_number_workouts_edit"
                android:text="@string/create_program_label_number_of_workouts"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <EditText
                android:id="@+id/create_program_number_workouts_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints="@null"
                android:gravity="end"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/create_program_button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="@string/create_program_button_save_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>