<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chooseProgramRowStyle">@style/ChooseProgramRow</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="BasicBackground">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="BasicForeground">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/colorLightBackground</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TableRowEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.618</item>
        <item name="android:gravity">start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="ResponsiveForeground" parent="BasicForeground">
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintWidth_max">800dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHeight_max">wrap</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleTextAppearance</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChooseProgramRow" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TableRowLabel">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ResponsiveForegroundWide" parent="ResponsiveForeground">
        <item name="android:layout_margin">8dp</item>
    </style>


</resources>
